<h1>Edit task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <div id="boxEdit">
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>

<p><%= link_to 'Go back to Tasks', tasks_path%></p>
