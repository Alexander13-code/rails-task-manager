<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task.id) %>
    <%= link_to task_path(@task),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, do %>
    <i class="fa-solid fa-trash-can" style="color: #005eff;"></i>
    <% end %>
    </li>
  <% end %>
</ul>
<p><%= link_to 'New task', tasks_new_path%></p>
