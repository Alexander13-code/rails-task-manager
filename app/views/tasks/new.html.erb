<h1>New Task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>

<div class="NewTaskBack">
  <i class="fa-solid fa-arrow-rotate-left"></i>
  <p><%= link_to 'Go back to List', tasks_path%></p>
</div>
